<?xml version="1.0" encoding="UTF-8"?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WTEMaui.Views"
    x:Class="WTEMaui.MainTabShell">

    <TabBar>
        <ShellContent Title="推荐" Icon="heart.png" ContentTemplate="{DataTemplate views:RecommendPage}" />
        <ShellContent Title="首页" Icon="home.png" ContentTemplate="{DataTemplate views:DashboardPage}" />
        <ShellContent Title="分析" Icon="chart.png" ContentTemplate="{DataTemplate views:AnalysisPage}" />
        <ShellContent Title="统计"
                Icon="chart.png"
                ContentTemplate="{DataTemplate views:StatisticPage}"/>
    </TabBar>

    <!-- 设置页面路由 -->
    <ShellContent
        Title="设置"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />

</Shell>