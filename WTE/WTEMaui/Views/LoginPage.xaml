<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WTEMaui.Views.LoginPage"
             Title=""
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="40,60" Spacing="30">
            
            <!-- Logo -->
            <Image Source="login.png"
                   HeightRequest="120"
                   Aspect="AspectFit"
                   HorizontalOptions="Center" />

            <!-- 标题 -->
            <Label Text="欢迎登录"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#333333"
                   HorizontalOptions="Center" />

            <!-- 用户名输入框 -->
            <Frame BorderColor="#E0E0E0" CornerRadius="12" Padding="15" BackgroundColor="#F8F9FA">
                <VerticalStackLayout Spacing="5">
                    <Label Text="用户名" FontSize="14" TextColor="#666666" FontAttributes="Bold" />
                    <Entry x:Name="UsernameEntry" 
                           Placeholder="请输入用户名"
                           PlaceholderColor="#999999"
                           TextColor="#333333"
                           BackgroundColor="Transparent"
                           Text="{Binding Username}" />
                </VerticalStackLayout>
            </Frame>

            <!-- 密码输入框 -->
            <Frame BorderColor="#E0E0E0" CornerRadius="12" Padding="15" BackgroundColor="#F8F9FA">
                <VerticalStackLayout Spacing="5">
                    <Label Text="密码" FontSize="14" TextColor="#666666" FontAttributes="Bold" />
                    <Entry x:Name="PasswordEntry" 
                           Placeholder="请输入密码"
                           PlaceholderColor="#999999"
                           TextColor="#333333"
                           IsPassword="True"
                           BackgroundColor="Transparent"
                           Text="{Binding Password}" />
                </VerticalStackLayout>
            </Frame>

            <!-- 登录按钮 -->
            <Button Text="登录"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="55"
                    Clicked="OnLoginClicked"
                    Margin="0,10,0,0">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#9FA8DA" Offset="0.0" />
                        <GradientStop Color="#B39DDB" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- 注册链接 -->
            <Label Text="还没有账号？点击注册"
                   TextColor="#667eea"
                   HorizontalOptions="Center"
                   FontSize="16">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRegisterTapped" />
                </Label.GestureRecognizers>
            </Label>

            <!-- 状态信息 -->
            <Label x:Name="StatusLabel"
                   Text=""
                   HorizontalOptions="Center"
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>